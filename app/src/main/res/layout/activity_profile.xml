<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inside.ProfileActivity">

        <TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textColor="@color/green_500"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/easter_egg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="3dp"
            android:text="."
            android:gravity="bottom|center"
            android:layout_gravity="bottom|center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center|center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <Switch
                android:id="@+id/enable_dark_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dark_mode"/>

        </LinearLayout>

        <Button
            android:id="@+id/sign_out_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/singOut_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_gravity="center|bottom"/>

</FrameLayout>