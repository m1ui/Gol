<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".inside.ProfileActivity">

    <TextView
        android:id="@+id/easter_egg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="3sp"
        android:text="."
        android:layout_gravity="center|end"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center|top"
            android:cropToPadding="true"
            android:src="@drawable/ic_ava_test"
            android:contentDescription="@string/profile_avatar" />

        <TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/green_500"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/surname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/green_500"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center|center_horizontal"
            android:gravity="center"
            android:orientation="vertical">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/subscribe_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:text="@string/subscribe"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tg_me"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_tg_me"
                            android:contentDescription="@string/tg_me"/>

                        <ImageView
                            android:id="@+id/vk_me"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_vk_me"
                            android:contentDescription="@string/vk_me"/>

                        <ImageView
                            android:id="@+id/inst_me"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="7dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_inst_me"
                            android:contentDescription="@string/inst_me"/>

                    <ImageView
                        android:id="@+id/git_me"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/inst_me"
                        android:src="@drawable/ic_git_me" />

                </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/sign_out_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/singOut_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_gravity="center|bottom"/>

</FrameLayout>

